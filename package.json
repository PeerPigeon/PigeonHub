{
  "name": "pigeonhub",
  "version": "1.0.0",
  "description": "PigeonHub - Decentralized mesh network with WebSocket signaling and PeerPigeon bootstrap nodes",
  "type": "module",
  "main": "bootstrap-node.js",
  "exports": {
    ".": "./bootstrap-node.js",
    "./modules/*": "./modules/*",
    "./config/*": "./config/*"
  },
  "scripts": {
    "start": "node bootstrap-node.js --port=8080 --role=primary",
    "start:bootstrap1": "node bootstrap-node.js --port=3001 --role=primary",
    "start:bootstrap2": "node bootstrap-node.js --port=3002 --role=secondary", 
    "start:dev": "concurrently \"npm run start:bootstrap1\" \"npm run start:bootstrap2\"",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "peerpigeon",
    "websocket",
    "signaling",
    "peer-to-peer",
    "mesh-network",
    "decentralized",
    "pigeonhub"
  ],
  "author": "PigeonHub",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/draeder/pigeonhub.git"
  },
  "homepage": "https://github.com/draeder/pigeonhub#readme",
  "bugs": {
    "url": "https://github.com/draeder/pigeonhub/issues"
  },
  "files": [
    "bootstrap-node.js",
    "modules/",
    "config/",
    "README.md"
  ],
  "dependencies": {
    "peerpigeon": "git+https://github.com/draeder/peerpigeon.git",
    "ws": "^8.14.2"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
